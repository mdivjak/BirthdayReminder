<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/add_bday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dodaj rodj"
        app:layout_constraintBottom_toTopOf="@+id/list_bdays"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/list_bdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listaj ih"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/add_bday"
        app:layout_constraintStart_toStartOf="@+id/add_bday"
        app:layout_constraintTop_toBottomOf="@id/add_bday"/>
</androidx.constraintlayout.widget.ConstraintLayout>